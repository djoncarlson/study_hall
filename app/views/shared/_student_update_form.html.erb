<%= form_for @student do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label "Student Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Assignment to be completed" %><br/>
    <%= f.text_field :assignment %>
  </div>
  <div class="field">
    <%= f.label "Special instructions (optional)"%><br/>
    <%= f.text_field :instructions %>
  </div>
  <table class="box_table">
       <th>
        <td>&nbsp;</td>
        <td style="font-size: 85%">Mon</td>
        <td style="font-size: 85%">Tues</td>
        <td style="font-size: 85%">Wed</td>
        <td style="font-size: 85%">Thurs</td>
        <td style="font-size: 85%">Fri</td>
      </th>
      <tr>
        <td>Lunch:</td>
        <td><%= f.check_box :mlunch %></td>
        <td><%= f.check_box :tlunch %></td>
        <td><%= f.check_box :wlunch %></td>
        <td><%= f.check_box :rlunch %></td>
        <td><%= f.check_box :flunch %></td>
      </tr>
      <tr>
        <td>After:</td>
        <td><%= f.check_box :mafter %></td>
        <td><%= f.check_box :tafter %></td>
        <td><%= f.check_box :wafter %></td>
        <td><%= f.check_box :rafter %></td>
        <td><%= f.check_box :fafter %></td>
      </tr>
    </table>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

<% end %>
