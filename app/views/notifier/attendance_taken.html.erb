<h3>
  Attendance record for <%= @attendance.section.downcase %>
</h3>

<p>
  Created <%= @attendance.created_at.strftime('%d %b %Y') %> by <%= @attendance.user.name %>
</p>

<% if @allassignment_array.empty? %>
  <p><strong>No students were assigned to study hall for this section</strong></p>
<% else %>
  <% if @missingassignment_array.empty? %>
    <p><strong>No missing students in this attendance record</strong></p>
  <% else %>
    <h3><strong>The following students did not show up to study hall:</strong></h3>
    <ul>
    <% @missingassignment_array.each do |assignment| %>
      <li><%= assignment.student.name %> -- <%= assignment.assn %> for <%= assignment.user.name %> <% if assignment.detention %>(detention)<% end %></li>
    <% end %>
    </ul></p>
  <% end %>
<% end %>
